<% if (title) { %>
    <h1><%= title %></h1>
  <% } %>
  
  <%- messages() %>
  
  <% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>
  
  <div class="form-container">
    <form id="addClassForm" action="/inv/add-classification" method="post">
      <div class="form-group">
        <label for="classification_name">Classification Name:</label>
        <input type="text" id="classification_name" name="classification_name" required
               pattern="^[a-zA-Z0-9]+$" value="<%= locals.classification_name ? classification_name : '' %>">
        <span class="form-instructions">Classification name cannot contain spaces or special characters</span>
      </div>
      
      <div class="form-group">
        <button type="submit">Add Classification</button>
      </div>
    </form>
  </div>